                    var inputVal1_@(i) = document.querySelector(".mg@(i)g1 input[type='number']").value;
                    if (/^(([0-5]{1})|([0-4]{1}(.|,)\d{2}){1}){1}$/.test(inputVal1_@(i) ) == true) {
