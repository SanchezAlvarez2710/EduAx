            <h2>Course: @Model.ElementAt(0).name_course</h2>
            <h2>Group: @Model.ElementAt(0).id_group</h2>
        </div>
        @*COLUMNS*@
        <h2>Id student</h2>
        <h2>Name student</h2>
        <h2>1st grade</h2>
        <h2>2nd grade</h2>
        <h2>3rd grade</h2>
        <h2>4th grade</h2>
        <h2>Times</h2>
        <h2>State</h2>
