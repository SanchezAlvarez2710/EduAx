                        <div class="icon">
                            <i class="uil uil-star"></i>
                        </div>
                        <h2 class="text-title">Edit first grade student</h2>
                    </div>
                    <hr />
                    <h2>Modify 1st grade to @Html.DisplayFor(Model => Model.ElementAt(i).name_person)</h2>
                    <input type="number" placeholder="@Model.ElementAt(i).stgrade" value="" step="0.01" min="0" max="5" autofocus=""/>
                    <div class="btns">
                        <a href="#" class="modal-grades-close mgc@(i)g1">Close</a>                    
                        <a href="#" class="modal-grades-accept mga@(i)g1">Accept</a>
                    </div>
                </div>
            </section>
            <script>

                document.querySelector(".mg@(i)g1 input[type='number']").addEventListener('keyup', (e) => {
                    if (e.keyCode === 13) {
                        var inputVal1_@(i) = document.querySelector(".mg@(i)g1 input[type='number']").value;
                        if (/^(([0-5]{1})|([0-4]{1}(.|,)\d{2}){1}){1}$/.test(inputVal1_@(i)) == true) {
                            e.preventDefault();
                            location.href = "/Teacher/Edit?id_group=" + @Model.ElementAt(i).id_group + "&id_student=" + @Model.ElementAt(i).id_student + "&n_grade=1&grade=" + inputVal1_@(i);
                        } else {
                            alert('Solo se permiten numeros del 0 al 5 con dos cifras decimales');
                        }
                    }
